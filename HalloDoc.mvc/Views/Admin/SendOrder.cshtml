<div class="container">
    <div class="d-flex justify-content-between pt-3">
        <h2>Documents</h2>
        <button onclick="location.href='@Url.Action("AdminDashboard", "Admin")'" id="back-btn">&lt; Back</button>

    </div>
    <div class="mt-3 border rounded-3 shadow pt-3 px-3 bg-white">
        <div class="row">
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <select class="form-select text-secondary py-0" id="floatingSelect" aria-label="Floating label select example">
                        <option selected>Select Profession</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                    <label for="floatingSelect"></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput"
                           placeholder="business" />
                    <label for="floatingInput" class="">Business</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput"
                           placeholder="business contact" />
                    <label for="floatingInput" class="">Business Contact</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingInput"
                            />
                    <label for="floatingInput" class="">Email</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput"
                           placeholder="fax number" />
                    <label for="floatingInput" class="">Fax Number</label>
                </div>
            </div>
            <div class="col-12">
                <div class="form-floating mb-3">
